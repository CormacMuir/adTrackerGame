{
    "manifest_version": 2,
    "name": "LinkedIn AdBlocker",
    "description": "Blocking ads.",
    "version": "0.0.1",
    "author": "<Cormac Muir>",
    "browser_action": {
        "default_title": "LinkedIn AdBlocker"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "declarativeContent",
        "storage",
        "webNavigation",
        "webRequest",
        "webRequestBlocking",
        "http://*/",
        "https://*/",
        "http://localhost/*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    }
}